{
	"name": "batt-logger",
	"version": "0.0.1",
	"description": "Logging and tracking app for batteries",
	"main": "out/dist/backend/server.js",
	"type": "module",
	"scripts": {
		"start": "node out/dist/backend/server.js",
		"start:dev": "NODE_ENV=dev npm run start",
		"initialise": "npm run rebuild && node out/dist/backend/server.js --init-db",
		"initialise:dev": "NODE_ENV=dev npm run initialise",
		"build": "npm run build:backend && npm run build:frontend && build/build.sh",
		"rebuild": "npm run clean && npm run build",
		"build:backend": "tsc -p tsconfig.json",
		"build:frontend": "parcel build",
		"clean": "build/clean.sh",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "node --experimental-vm-modules node_modules/.bin/jest",
		"test:e2e": "playwright test"
	},
	"targets": {
		"@frontend": {
			"source": "src/frontend/**/*.html",
			"distDir": "out/dist/frontend",
			"publicUrl": "."
		}
	},
	"dependencies": {
		"chart.js": "^4.5.1",
		"express": "^5.2.1",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "^2.16.3",
		"@playwright/test": "^1.57.0",
		"@types/express": "^5.0.6",
		"@types/node": "^25.0.7",
		"@types/jest": "^30.0.0",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.50.0",
		"@typescript-eslint/parser": "^8.49.0",
		"eslint": "^9.39.2",
		"eslint-plugin-jsonc": "^2.21.0",
		"jest": "^30.2.0",
		"parcel": "^2.16.3",
		"sass": "^1.97.0",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	}
}
