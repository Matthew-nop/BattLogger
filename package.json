{
	"name": "batt-logger",
	"version": "0.0.1",
	"description": "Logging and tracking app for batteries",
	"main": "dist/backend/server.js",
	"type": "module",
	"scripts": {
		"test": "node --experimental-vm-modules node_modules/.bin/jest",
		"build": "build/build.sh && npm run build:backend && npm run build:frontend",
		"build:backend": "tsc -p tsconfig.json",
		"build:frontend": "parcel build",
		"start": "node dist/backend/server.js",
		"setup": "npm run build && node dist/backend/setup_database.js",
		"lint": "eslint ."
	},
	"targets": {
		"@mainPage": {
			"source": "src/frontend/index.html",
			"distDir": "dist/frontend",
			"publicUrl": "."
		},
		"@addBatteryType": {
			"source": "src/frontend/components/add-battery-type/add-battery-type.html",
			"distDir": "dist/frontend/add-battery-type",
			"publicUrl": "/add-battery-type/"
		},
		"@addBattery": {
			"source": "src/frontend/components/add-battery/add_battery.html",
			"distDir": "dist/frontend/add-battery",
			"publicUrl": "/add-battery/"
		},
		"@batteryDetails": {
			"source": "src/frontend/components/battery-details/battery_details.html",
			"distDir": "dist/frontend/battery-details",
			"publicUrl": "/battery-details/"
		},
		"@modelDetails": {
			"source": "src/frontend/components/model-details/model_details.html",
			"distDir": "dist/frontend/model-details",
			"publicUrl": "/model-details/"
		},
		"@addTest": {
			"source": "src/frontend/components/add-test-info/add_test_info.html",
			"distDir": "dist/frontend/add-test-info",
			"publicUrl": "/add-test-info/"
		},
		"@batterySummary": {
			"source": "src/frontend/components/battery-summary/battery_summary.html",
			"distDir": "dist/frontend/battery-summary",
			"publicUrl": "/battery-summary/"
		}
	},
	"dependencies": {
		"chart.js": "^4.5.0",
		"express": "^5.1.0",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"@parcel/transformer-sass": "^2.15.4",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.0.12",
		"@types/sqlite3": "^5.1.0",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.36.0",
		"@typescript-eslint/parser": "^8.36.0",
		"eslint": "^9.30.1",
		"eslint-plugin-jsonc": "^2.20.1",
		"jest": "^30.0.4",
		"parcel": "^2.15.4",
		"sass": "^1.89.2",
		"supertest": "^7.1.1",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	}
}